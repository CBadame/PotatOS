{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "distrib/"
  },
  "include": [
    "./source/*",
    "./source/os/*",
    "./source/host/*",
    "./source/client/*"
  ],
  "exclude": [
    "./test",
    "./.idea"
  ],
  "files": [
    "./source/globals.ts",
    "./source/utils.ts",
    "./source/host/control.ts",
    "./source/host/devices.ts",
    "./source/host/cpu.ts",
    "./source/host/memory.ts",
    "./source/os/interrupt.ts",
    "./source/os/canvastext.ts",
    "./source/os/console.ts",
    "./source/os/deviceDriver.ts",
    "./source/os/deviceDriverKeyboard.ts",
    "./source/os/queue.ts",
    "./source/os/facts.ts",
    "./source/os/shell.ts",
    "./source/os/shellCommand.ts",
    "./source/os/userCommand.ts",
    "./source/os/kernel.ts",
    "./source/os/memoryManager.ts",
    "./source/client/processControlBlock.ts"
  ]
}
